<%- include("partials/header") -%>

<div class="container">
    <br><br><br>
    <h2 class="colorfull-text">Welcome to Admin Page</h2>

    <div>
        <button class="btn btn-dark mr-3">Add</button>
        <button class="btn btn-dark mr-3">Delete</button>
    </div>

    <br><br>
    <div class="text-left">

        <form action="/add" method="post">

            <div class="row">
                <div class="col-lg-6"><br><br>
                    <label class="form-label">Title</label><br>
                    <input type="text" class="form-control" name="title" placeholder="Add suitable Title for the Blog post" required>
                </div>

                <div class="col-lg-6"><br><br>
                    <label class="form-label">Source</label><br>
                    <input type="text" class="form-control" name="source" placeholder="Add Source of the blog post" required>
                </div>
                
            </div>

            <div> <br><br>
                <label class="form-label">Content</label><br>
                <textarea name="content" class="form-control" cols="40" rows="5" placeholder="Add Content for the blog post" required></textarea>
            </div>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg mt-5">Post</button>
            </div>

        </form>
    </div>

    <br><br><br>



    <div class="data__Table">
        <table >

            <th>Sr. No</th>
            <th>Post Title</th>
            <th>Source</th>
            <th>Delete</th>
            <% for (i = 0; i <= cards.length - 1; i++) { %>
            <tr>
                <td><%= i+ 1  %></td>
                <td><%= cards[i].title %></td>
                <td><%= cards[i].source %></td>
                <td class="text-center">
                    <a href="/remove/<%=cards[i]._id%>">
                        <i class="fa fa-close"></i>
                    </a>
                </td>
            </tr>
            <% } %>


        </table>
    </div>


    <br><br>
    <div>
        <h3>Users</h3>

        <div class="data__Table">
            <table >
    
                <th>Sr. No</th>
                <th>Username</th>
                <th>gmail</th>
                <% for (i = 0; i <= users.length - 1; i++) { %>
                <tr>
                    <td><%= i+ 1  %></td>
                    <td><%= users[i].username %></td>
                    <td><%= users[i].email %></td>
                </tr>
                <% } %>
    
    
            </table>

    </div>
</div>



<%- include("partials/footer") -%>